    <insert id="addRoleDept" parameterType="com.example.tpl.system.entity.RoleDeptBean">
        insert into sys_role_dept
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="roleId != null">
                role_id,
            </if>
            <if test="deptId != null">
                dept_id,
            </if>
